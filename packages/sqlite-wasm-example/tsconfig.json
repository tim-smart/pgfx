{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@sqlfx/sql/*": ["./packages/sql/src/*"],
      "@sqlfx/sql": ["./packages/sql/src/index.js"],

      "@sqlfx/sqlite/*": ["./packages/sqlite/src/*"],
      "@sqlfx/sqlite": ["./packages/sqlite/src/index.js"]
    }
  },
  "include": ["src"]
}
